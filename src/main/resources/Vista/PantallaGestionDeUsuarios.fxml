<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefWidth="800" prefHeight="550"
            stylesheets="@ayu-theme.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinemax.empleados.Controlador.ControladorGestionUsuarios">

    <!-- ░░░ TOP BAR ░░░ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
            <children>
                <!-- Botón Regresar -->
                <Button fx:id="btnBack"
                        text="←"
                        onAction="#onBackAction"
                        styleClass="icon-button"/>

                <!-- Título -->
                <Label text="Gestión de Usuarios" styleClass="section-title">
                    <font><Font name="Arial Black" size="22"/></font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ░░░ PANEL CENTRAL ░░░ -->
    <center>
        <VBox spacing="12">
            <!-- Botón Nuevo Usuario alineado a la derecha -->
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="btnAgregarUsuario"
                        text="Nuevo Usuario"
                        onAction="#onAgregarUsuario"
                        styleClass="primary-btn"/>
            </HBox>

            <VBox spacing="12" prefWidth="700" maxWidth="700">

            <!--             Tabla de usuarios -->
            <TableView fx:id="tableUsuarios" prefHeight="630" prefWidth="630">
                <columns>
                    <TableColumn fx:id="colActivo"     text="Activo"        prefWidth="60"/>
                    <TableColumn fx:id="colUsuario"  text="Usuario"        prefWidth="60"/>
                    <TableColumn fx:id="colNombre" text="Nombre"    prefWidth="130"/>
                    <TableColumn fx:id="colEmail"  text="Correo"    prefWidth="170"/>
                    <TableColumn fx:id="colRol"    text="Rol"       prefWidth="120"/>
                    <!-- Columna de acciones -->
                    <TableColumn fx:id="colEditar" text="Acciones"  prefWidth="90"/>
                </columns>
            </TableView>
        </VBox>

    </VBox>
    </center>

    <!-- ░░░ FRANJA IZQUIERDA CON DATOS DE SESIÓN ░░░ -->
    <left>
        <VBox spacing="10" prefWidth="180" styleClass="summary-pane" alignment="TOP_CENTER">
            <children>
                <!-- Etiquetas de usuario activo -->
                <Label fx:id="lblNombreUsuario" text="Carlos Pérez" styleClass="user-name"/>
                <Label fx:id="lblRolUsuario"    text="Administrador" styleClass="user-role"/>

                <!-- Espaciador que empuja el botón Log Out al fondo -->
                <Region VBox.vgrow="ALWAYS"/>

                <Button text="Log Out" onAction="#onCerrarSesion" styleClass="logout-btn"/>
            </children>
        </VBox>
    </left>

</BorderPane>
