<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="750.0" prefWidth="1000.0" stylesheets="@ayu-theme.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.peliculas.controladores.ControladorFuncionesFX">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
            <children>
                <Label text="Gestión de Funciones">
                    <font>
                        <Font name="Arial Black" size="24" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
                <VBox spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                    </padding>

                    <!-- Sección de búsqueda y filtros (movida arriba) -->
                    <VBox spacing="15.0" styleClass="ticket-card">
                        <children>
                            <Label styleClass="section-title" text="Búsqueda y Filtros" />

                            <!-- Búsqueda por ID -->
                            <HBox alignment="CENTER_LEFT" spacing="15.0">
                                <children>
                                    <Label minWidth="100" text="Buscar por ID:" />
                                    <TextField fx:id="txtBuscarId" prefWidth="200.0" promptText="Ingrese el ID de la función..." />
                                    <Button fx:id="btnBuscarId" onAction="#onBuscarId" text="Buscar" />
                                </children>
                            </HBox>

                            <!-- Filtrar por sala -->
                            <HBox alignment="CENTER_LEFT" spacing="15.0">
                                <children>
                                    <Label minWidth="100" text="Filtrar por sala:" />
                                    <ComboBox fx:id="cmbFiltrarSala" prefWidth="200.0" promptText="Seleccione una sala..." />
                                    <Button fx:id="btnFiltrarSala" onAction="#onFiltrarSala" text="Filtrar" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="btnMostrarTodas" onAction="#onMostrarTodas" text="Mostrar Todas" />
                                </children>
                            </HBox>
                        </children>
                        <padding>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                    </VBox>

                    <!-- Formulario de programación de funciones -->
                    <VBox spacing="15.0" styleClass="ticket-card">
                        <children>
                            <Label styleClass="section-title" text="Programar Nueva Función" />

                            <!-- Primera fila: Película y Sala -->
                            <HBox alignment="CENTER_LEFT" spacing="15.0">
                                <children>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label text="Película:" />
                                            <ComboBox fx:id="cmbPelicula" maxWidth="Infinity" promptText="Seleccione una película..." />
                                        </children>
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label text="Sala:" />
                                            <ComboBox fx:id="cmbSala" maxWidth="Infinity" promptText="Seleccione una sala..." />
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <!-- Segunda fila: Fecha y Hora -->
                            <HBox alignment="CENTER_LEFT" spacing="15.0">
                                <children>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label text="Fecha:" />
                                            <DatePicker fx:id="dateFechaFuncion" maxWidth="Infinity" promptText="Seleccione la fecha..." />
                                        </children>
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label text="Hora de inicio (HH:MM):" />
                                            <TextField fx:id="txtHoraInicio" maxWidth="Infinity" promptText="ej: 14:30" />
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <!-- Tercera fila: Formato y Tipo de estreno -->
                            <HBox alignment="CENTER_LEFT" spacing="15.0">
                                <children>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label text="Formato:" />
                                            <ComboBox fx:id="cmbFormato" maxWidth="Infinity" promptText="Seleccione el formato..." />
                                        </children>
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label text="Tipo de estreno:" />
                                            <ComboBox fx:id="cmbTipoEstreno" maxWidth="Infinity" promptText="Seleccione el tipo..." />
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <!-- Botones del formulario -->
                            <HBox alignment="CENTER" spacing="15.0">
                                <children>
                                    <Button fx:id="btnProgramarFuncion" onAction="#onProgramarFuncion" styleClass="primary-button" text="Programar Función" />
                                    <Button fx:id="btnLimpiarFormulario" onAction="#onLimpiarFormulario" text="Limpiar Formulario" />
                                </children>
                            </HBox>
                        </children>
                        <padding>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                    </VBox>

                    <!-- Tabla de funciones programadas (movida abajo) -->
                    <VBox spacing="10.0">
                        <children>
                            <Label prefHeight="0.0" prefWidth="224.0" styleClass="section-title" text="Funciones Programadas" />
                            <TableView fx:id="tablaFunciones" fixedCellSize="40.0" prefHeight="600.0">
                                <columns>
                                    <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                                    <TableColumn fx:id="colPelicula" prefWidth="250.0" text="Película" />
                                    <TableColumn fx:id="colSala" prefWidth="150.0" text="Sala" />
                                    <TableColumn fx:id="colFechaHora" prefWidth="200.0" text="Fecha y Hora" />
                                    <TableColumn fx:id="colFormato" prefWidth="100.0" text="Formato" />
                                    <TableColumn fx:id="colTipoEstreno" prefWidth="150.0" text="Tipo Estreno" />
                                </columns>
                            </TableView>
                        </children>
                    </VBox>

                    <!-- Botones de acción para funciones seleccionadas -->
                    <HBox alignment="CENTER" spacing="15.0">
                        <children>
                            <Button fx:id="btnVerDetalles" disable="true" onAction="#onVerDetalles" text="Ver Detalles" />
                            <Button fx:id="btnEditarFuncion" disable="true" onAction="#onEditarFuncion" text="Editar Función" />
                            <Button fx:id="btnCrearFuncion" onAction="#onLimpiarFormulario" text="Nuevo (Limpiar)" />
                            <Button fx:id="btnEliminarFuncion" disable="true" onAction="#onEliminarFuncion" styleClass="danger-button" text="Eliminar Función" />
                        </children>
                    </HBox>

                    <!-- Panel de información y estadísticas -->
                    <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="summary-pane">
                        <children>
                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label fx:id="lblTotalFunciones" styleClass="summary-title" text="Funciones mostradas: 0 de 0" />
                                    <Label fx:id="lblEstadoOperacion" styleClass="summary-details" text="Sistema listo para programar funciones" />
                                </children>
                            </VBox>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                        </padding>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
