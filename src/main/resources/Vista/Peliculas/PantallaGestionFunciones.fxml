<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="750.0" prefWidth="1000.0" stylesheets="@ayu-theme.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.peliculas.controladores.ControladorFuncionesFX">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
            <children>
                <Label text="Gestión de Funciones">
                    <font>
                        <Font name="Arial Black" size="24" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>

            <!-- Sección de programar nueva función -->
            <VBox spacing="15.0" styleClass="ticket-card">
                <children>
                    <Label text="Programar Nueva Función" styleClass="section-title" />

                    <!-- Primera fila: Película y Sala -->
                    <HBox spacing="20.0" alignment="CENTER_LEFT">
                        <children>
                            <VBox spacing="5.0" prefWidth="250.0">
                                <children>
                                    <Label text="Película:" />
                                    <ComboBox fx:id="cmbPelicula" prefWidth="250.0" promptText="Seleccione una película..." />
                                </children>
                            </VBox>
                            <VBox spacing="5.0" prefWidth="200.0">
                                <children>
                                    <Label text="Sala:" />
                                    <ComboBox fx:id="cmbSala" prefWidth="200.0" promptText="Seleccione una sala..." />
                                </children>
                            </VBox>
                        </children>
                    </HBox>

                    <!-- Segunda fila: Fecha y Hora -->
                    <HBox spacing="20.0" alignment="CENTER_LEFT">
                        <children>
                            <VBox spacing="5.0" prefWidth="150.0">
                                <children>
                                    <Label text="Fecha:" />
                                    <DatePicker fx:id="dateFechaFuncion" prefWidth="150.0" />
                                </children>
                            </VBox>
                            <VBox spacing="5.0" prefWidth="120.0">
                                <children>
                                    <Label text="Hora (HH:MM):" />
                                    <TextField fx:id="txtHoraInicio" prefWidth="120.0" promptText="14:30" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>

                    <!-- Tercera fila: Formato y Tipo de Estreno -->
                    <HBox spacing="20.0" alignment="CENTER_LEFT">
                        <children>
                            <VBox spacing="5.0" prefWidth="120.0">
                                <children>
                                    <Label text="Formato:" />
                                    <ComboBox fx:id="cmbFormato" prefWidth="120.0" promptText="Formato..." />
                                </children>
                            </VBox>
                            <VBox spacing="5.0" prefWidth="150.0">
                                <children>
                                    <Label text="Tipo de Estreno:" />
                                    <ComboBox fx:id="cmbTipoEstreno" prefWidth="150.0" promptText="Tipo..." />
                                </children>
                            </VBox>
                        </children>
                    </HBox>

                    <!-- Botones de acción del formulario -->
                    <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                            <Button fx:id="btnProgramarFuncion" onAction="#onProgramarFuncion" styleClass="primary-button" text="Programar Función" />
                            <Button fx:id="btnLimpiarFormulario" onAction="#onLimpiarFormulario" text="Limpiar Formulario" />
                        </children>
                    </HBox>
                </children>
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
            </VBox>

            <!-- Sección de búsqueda y filtros -->
            <VBox spacing="15.0" styleClass="ticket-card">
                <children>
                    <Label text="Búsqueda y Filtros" styleClass="section-title" />

                    <!-- Búsqueda por ID -->
                    <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                            <Label text="Buscar por ID:" minWidth="100" />
                            <TextField fx:id="txtBuscarId" promptText="Ingrese el ID de la función..." prefWidth="200.0" />
                            <Button fx:id="btnBuscarId" onAction="#onBuscarId" text="Buscar" />
                        </children>
                    </HBox>

                    <!-- Filtrar por sala -->
                    <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                            <Label text="Filtrar por sala:" minWidth="100" />
                            <ComboBox fx:id="cmbFiltrarSala" promptText="Seleccione una sala..." prefWidth="200.0" />
                            <Button fx:id="btnFiltrarSala" onAction="#onFiltrarSala" text="Filtrar" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnMostrarTodas" onAction="#onMostrarTodas" text="Mostrar Todas" />
                        </children>
                    </HBox>
                </children>
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
            </VBox>

            <!-- Tabla de funciones -->
            <VBox spacing="10.0">
                <children>
                    <Label text="Funciones Programadas" styleClass="section-title" />
                    <TableView fx:id="tablaFunciones" prefHeight="300.0">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
                            <TableColumn fx:id="colPelicula" text="Película" prefWidth="250.0" />
                            <TableColumn fx:id="colSala" text="Sala" prefWidth="100.0" />
                            <TableColumn fx:id="colFechaHora" text="Fecha y Hora" prefWidth="150.0" />
                            <TableColumn fx:id="colFormato" text="Formato" prefWidth="80.0" />
                            <TableColumn fx:id="colTipoEstreno" text="Tipo Estreno" prefWidth="120.0" />
                        </columns>
                    </TableView>
                </children>
            </VBox>

            <!-- Botones de acción para funciones seleccionadas -->
            <HBox spacing="15.0" alignment="CENTER">
                <children>
                    <Button fx:id="btnVerDetalles" onAction="#onVerDetalles" text="Ver Detalles" disable="true" />
                    <Button fx:id="btnEditarFuncion" onAction="#onEditarFuncion" text="Editar Función" disable="true" />
                    <Button fx:id="btnEliminarFuncion" onAction="#onEliminarFuncion" text="Eliminar Función" disable="true" styleClass="danger-button" />
                </children>
            </HBox>

            <!-- Panel de información y estadísticas -->
            <HBox spacing="20.0" alignment="CENTER_LEFT" styleClass="summary-pane">
                <children>
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label fx:id="lblTotalFunciones" text="Funciones mostradas: 0 de 0" styleClass="summary-title" />
                            <Label fx:id="lblEstadoOperacion" text="Sistema listo para programar funciones" styleClass="summary-details" />
                        </children>
                    </VBox>
                </children>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                </padding>
            </HBox>
        </VBox>
    </center>
</BorderPane>
