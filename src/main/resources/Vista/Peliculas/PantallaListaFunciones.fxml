<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@ayu-theme.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.peliculas.controladores.ControladorListaFuncionesFX">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
            <children>
                <Label text="Gestión de Funciones - Lista">
                    <font>
                        <Font name="Arial Black" size="24" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>

            <!-- Controles de búsqueda y filtros -->
            <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="filter-bar">
                <children>
                    <VBox spacing="5.0">
                        <children>
                            <Label text="Buscar por ID:" />
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <children>
                                    <TextField fx:id="txtBuscarId" prefWidth="120.0" promptText="ID..." />
                                    <Button fx:id="btnBuscarId" onAction="#onBuscarId" text="Buscar" />
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <VBox spacing="5.0">
                        <children>
                            <Label text="Filtrar por Sala:" />
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <children>
                                    <ComboBox fx:id="cmbFiltrarSala" prefWidth="200.0" promptText="Todas las salas..." />
                                    <Button fx:id="btnFiltrarSala" onAction="#onFiltrarSala" text="Filtrar" />
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <Button fx:id="btnMostrarTodas" onAction="#onMostrarTodas" text="Mostrar Todas" />
                    <Button fx:id="btnActualizar" onAction="#onActualizar" text="Actualizar" styleClass="primary-button" />
                </children>
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
            </HBox>

            <!-- Botones de acción principales -->
            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <children>
                    <Button fx:id="btnNuevaFuncion" onAction="#onNuevaFuncion" text="Nueva Función" styleClass="success-button" />
                    <Button fx:id="btnVerDetalles" onAction="#onVerDetalles" text="Ver Detalles" disable="true" />
                    <Button fx:id="btnEditarFuncion" onAction="#onEditarFuncion" text="Editar Función" disable="true" />
                    <Button fx:id="btnEliminarFuncion" onAction="#onEliminarFuncion" text="Eliminar Función" disable="true" styleClass="danger-button" />
                </children>
            </HBox>

            <!-- Tabla de funciones -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                <children>
                    <Label text="Lista de Funciones Programadas" styleClass="section-title" />
                    <TableView fx:id="tablaFunciones" VBox.vgrow="ALWAYS" prefHeight="400.0">
                        <columns>
                            <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                            <TableColumn fx:id="colPelicula" prefWidth="250.0" text="Película" />
                            <TableColumn fx:id="colSala" prefWidth="150.0" text="Sala" />
                            <TableColumn fx:id="colFechaHora" prefWidth="180.0" text="Fecha y Hora" />
                            <TableColumn fx:id="colFormato" prefWidth="120.0" text="Formato" />
                            <TableColumn fx:id="colTipoEstreno" prefWidth="130.0" text="Tipo Estreno" />
                            <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
                        </columns>
                    </TableView>
                </children>
            </VBox>

            <!-- Panel de información y estadísticas -->
            <HBox spacing="20.0" alignment="CENTER_LEFT" styleClass="summary-pane">
                <children>
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label fx:id="lblTotalFunciones" text="Funciones mostradas: 0 de 0" styleClass="summary-title" />
                            <Label fx:id="lblEstadoOperacion" text="Sistema listo para gestionar funciones" styleClass="summary-details" />
                        </children>
                    </VBox>
                </children>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                </padding>
            </HBox>
        </VBox>
    </center>
</BorderPane>
