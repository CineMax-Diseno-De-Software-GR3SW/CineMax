<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="700.0" stylesheets="@ayu-theme.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.peliculas.controladores.ControladorFormularioFuncionFX">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
            <children>
                <Label fx:id="lblTituloVentana" text="Nueva Función">
                    <font>
                        <Font name="Arial Black" size="20" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <VBox spacing="25.0" styleClass="form-container">
                    <padding>
                        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
                    </padding>

                    <!-- Sección de información básica -->
                    <VBox spacing="15.0" styleClass="form-section">
                        <children>
                            <Label text="Información de la Función" styleClass="section-title" />

                            <!-- Primera fila: Película y Sala -->
                            <HBox spacing="20.0" alignment="CENTER_LEFT">
                                <children>
                                    <VBox spacing="8.0" prefWidth="300.0">
                                        <children>
                                            <Label text="Película *" styleClass="field-label" />
                                            <ComboBox fx:id="cmbPelicula" prefWidth="300.0" promptText="Seleccione una película..." />
                                        </children>
                                    </VBox>
                                    <VBox spacing="8.0" prefWidth="250.0">
                                        <children>
                                            <Label text="Sala *" styleClass="field-label" />
                                            <ComboBox fx:id="cmbSala" prefWidth="250.0" promptText="Seleccione una sala..." />
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <!-- Segunda fila: Fecha y Hora -->
                            <HBox spacing="20.0" alignment="CENTER_LEFT">
                                <children>
                                    <VBox spacing="8.0" prefWidth="200.0">
                                        <children>
                                            <Label text="Fecha *" styleClass="field-label" />
                                            <DatePicker fx:id="dateFechaFuncion" prefWidth="200.0" promptText="Seleccione fecha..." />
                                        </children>
                                    </VBox>
                                    <VBox spacing="8.0" prefWidth="150.0">
                                        <children>
                                            <Label text="Hora de Inicio *" styleClass="field-label" />
                                            <TextField fx:id="txtHoraInicio" prefWidth="150.0" promptText="HH:MM (ej: 14:30)" />
                                        </children>
                                    </VBox>
                                    <VBox spacing="8.0" prefWidth="150.0">
                                        <children>
                                            <Label text="Duración (min)" styleClass="field-label" />
                                            <TextField fx:id="txtDuracion" prefWidth="150.0" promptText="120" disable="true" />
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <!-- Tercera fila: Formato y Tipo de Estreno -->
                            <HBox spacing="20.0" alignment="CENTER_LEFT">
                                <children>
                                    <VBox spacing="8.0" prefWidth="200.0">
                                        <children>
                                            <Label text="Formato *" styleClass="field-label" />
                                            <ComboBox fx:id="cmbFormato" prefWidth="200.0" promptText="Seleccione formato..." />
                                        </children>
                                    </VBox>
                                    <VBox spacing="8.0" prefWidth="200.0">
                                        <children>
                                            <Label text="Tipo de Estreno *" styleClass="field-label" />
                                            <ComboBox fx:id="cmbTipoEstreno" prefWidth="200.0" promptText="Seleccione tipo..." />
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <!-- Información adicional -->
                            <VBox spacing="8.0">
                                <children>
                                    <Label text="Observaciones" styleClass="field-label" />
                                    <TextArea fx:id="txtObservaciones" prefRowCount="3" promptText="Observaciones adicionales (opcional)..." />
                                </children>
                            </VBox>
                        </children>
                        <padding>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                    </VBox>

                    <!-- Sección de precios (opcional para futuras funcionalidades) -->
                    <VBox spacing="15.0" styleClass="form-section">
                        <children>
                            <Label text="Configuración de Precios" styleClass="section-title" />
                            <HBox spacing="20.0" alignment="CENTER_LEFT">
                                <children>
                                    <VBox spacing="8.0" prefWidth="150.0">
                                        <children>
                                            <Label text="Precio Base" styleClass="field-label" />
                                            <TextField fx:id="txtPrecioBase" prefWidth="150.0" promptText="$0.00" />
                                        </children>
                                    </VBox>
                                    <VBox spacing="8.0" prefWidth="150.0">
                                        <children>
                                            <Label text="Descuento %" styleClass="field-label" />
                                            <TextField fx:id="txtDescuento" prefWidth="150.0" promptText="0" />
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                        </children>
                        <padding>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                    </VBox>

                    <!-- Información de la película seleccionada -->
                    <VBox spacing="10.0" styleClass="info-section">
                        <children>
                            <Label text="Información de la Película Seleccionada" styleClass="section-title" />
                            <VBox spacing="5.0" fx:id="panelInfoPelicula">
                                <children>
                                    <Label fx:id="lblInfoPelicula" text="Seleccione una película para ver su información" styleClass="info-text" />
                                </children>
                            </VBox>
                        </children>
                        <padding>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="15.0" alignment="CENTER" styleClass="button-bar">
            <children>
                <Button fx:id="btnGuardar" onAction="#onGuardar" text="Guardar Función" styleClass="success-button" prefWidth="150.0" />
                <Button fx:id="btnLimpiar" onAction="#onLimpiar" text="Limpiar" prefWidth="100.0" />
                <Button fx:id="btnCancelar" onAction="#onCancelar" text="Cancelar" prefWidth="100.0" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
