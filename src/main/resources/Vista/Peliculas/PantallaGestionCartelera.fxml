<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.peliculas.controladores.ControladorCarteleraFX">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <Label text="Gestión de Cartelera">
                <font>
                    <Font name="Arial Black" size="24" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnActualizarCartelera" onAction="#onActualizarCartelera" text="Actualizar Cartelera" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>

            <!-- Sección de búsqueda -->
            <VBox spacing="15.0">
                <Label text="Búsqueda en Cartelera" />

                <!-- Búsqueda por título -->
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <Label text="Por título:" minWidth="80" />
                    <TextField fx:id="txtBuscarTitulo" promptText="Ingrese el título o parte del título..." prefWidth="300.0" />
                    <Button fx:id="btnBuscarTitulo" onAction="#onBuscarTitulo" text="Buscar" />
                </HBox>

                <!-- Búsqueda por ID -->
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <Label text="Por ID:" minWidth="80" />
                    <TextField fx:id="txtBuscarId" promptText="Ingrese el ID de la película..." prefWidth="200.0" />
                    <Button fx:id="btnBuscarId" onAction="#onBuscarId" text="Buscar" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnLimpiarBusqueda" onAction="#onLimpiarBusqueda" text="Limpiar Búsqueda" />
                </HBox>
            </VBox>

            <!-- Grilla de películas en cartelera con scroll -->
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <content>
                    <GridPane fx:id="grillaCartelera" hgap="10" vgap="10" alignment="CENTER">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </GridPane>
                </content>
            </ScrollPane>

            <!-- Botones de acción -->
            <HBox spacing="15.0" alignment="CENTER">
                <Button fx:id="btnVerDetalles" onAction="#onVerDetalles" text="Ver Detalles" disable="true" />
            </HBox>

            <!-- Panel de información y estadísticas -->
            <HBox spacing="20.0" alignment="CENTER_LEFT">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label fx:id="lblTotalPeliculas" text="Películas mostradas: 0 de 0" />
                    <Label fx:id="lblEstadoCartelera" text="Cartelera lista para actualizar" />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
