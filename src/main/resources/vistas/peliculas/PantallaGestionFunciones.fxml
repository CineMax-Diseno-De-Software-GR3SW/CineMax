<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1400.0" stylesheets="@../temas/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.peliculas.controladores.ControladorFunciones" styleClass="root">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
            <children>
                <Button fx:id="btnVolver" text="←" styleClass="stepper-button" onAction="#onVolver" />
                <Label text="Gestión de Funciones" styleClass="section-title" />
                <Region HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <HBox spacing="20.0">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>

            <!-- Panel izquierdo: Formulario de función -->
            <VBox spacing="15.0" prefWidth="480.0" minWidth="480.0" maxWidth="480.0">
                <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                    <VBox spacing="20.0">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <!-- Formulario de función integrado -->
                        <VBox spacing="20.0" styleClass="ticket-card">
                            <Label text="Datos de Función" styleClass="section-title" />

                            <!-- Fila 1: Película -->
                            <VBox spacing="8.0">
                                <HBox alignment="CENTER_LEFT" spacing="2">
                                    <Label text="Película" styleClass="form-label" />
                                    <Label text="*" styleClass="required-asterisk" />
                                </HBox>
                                <ComboBox fx:id="cmbPelicula" promptText="Seleccione una película" styleClass="combo-box" />
                            </VBox>

                            <!-- Fila 2: Sala -->
                            <VBox spacing="8.0">
                                <HBox alignment="CENTER_LEFT" spacing="2">
                                    <Label text="Sala" styleClass="form-label" />
                                    <Label text="*" styleClass="required-asterisk" />
                                </HBox>
                                <ComboBox fx:id="cmbSala" promptText="Seleccione sala" styleClass="combo-box" />
                            </VBox>

                            <!-- Fila 3: Fecha y Hora -->
                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <HBox alignment="CENTER_LEFT" spacing="2">
                                        <Label text="Fecha" styleClass="form-label" />
                                        <Label text="*" styleClass="required-asterisk" />
                                    </HBox>
                                    <DatePicker fx:id="dateFecha" promptText="dd/mm/aaaa" styleClass="date-picker" />
                                </VBox>
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <HBox alignment="CENTER_LEFT" spacing="2">
                                        <Label text="Hora" styleClass="form-label" />
                                        <Label text="*" styleClass="required-asterisk" />
                                    </HBox>
                                    <TextField fx:id="txtHora" promptText="HH:MM (ej: 14:30)" styleClass="text-field" />
                                </VBox>
                            </HBox>

                            <!-- Fila 4: Formato -->
                            <VBox spacing="8.0">
                                <HBox alignment="CENTER_LEFT" spacing="2">
                                    <Label text="Formato" styleClass="form-label" />
                                    <Label text="*" styleClass="required-asterisk" />
                                </HBox>
                                <ComboBox fx:id="cmbFormato" promptText="Seleccione formato" styleClass="combo-box" />
                            </VBox>

                            <!-- Fila 5: Tipo de Estreno -->
                            <VBox spacing="8.0">
                                <HBox alignment="CENTER_LEFT" spacing="2">
                                    <Label text="Tipo de Estreno" styleClass="form-label" />
                                    <Label text="*" styleClass="required-asterisk" />
                                </HBox>
                                <ComboBox fx:id="cmbTipoEstreno" promptText="Seleccione tipo de estreno" styleClass="combo-box" />
                            </VBox>

                            <!-- Estado del formulario -->
                            <VBox spacing="8.0">
                                <Label fx:id="lblEstadoFormulario" text="Complete todos los campos obligatorios" styleClass="help-text" />
                                <HBox alignment="CENTER_LEFT" spacing="2">
                                    <Label text="*" styleClass="required-asterisk" />
                                    <Label text="Campos Obligatorios" styleClass="help-text" />
                                </HBox>
                            </VBox>

                        </VBox>

                        <!-- Botones del formulario -->
                        <VBox spacing="10.0" alignment="CENTER">
                            <Button fx:id="btnGuardar" text="Crear" styleClass="primary-button"
                                    disable="true" prefWidth="200.0" onAction="#onGuardar" />
                            <HBox spacing="10.0" alignment="CENTER">
                                <Button fx:id="btnNuevo" text="Nuevo" styleClass="link-button"
                                        prefWidth="90.0" onAction="#onLimpiarFormulario" />
                                <Button fx:id="btnLimpiarFormulario" text="Limpiar" styleClass="link-button"
                                        prefWidth="90.0" onAction="#onLimpiarFormulario" />
                            </HBox>
                        </VBox>
                    </VBox>
                </ScrollPane>
            </VBox>

            <!-- Panel derecho: Gestión de funciones -->
            <VBox spacing="12.0" HBox.hgrow="ALWAYS">

                <!-- Sección de búsqueda -->
                <VBox spacing="10.0" styleClass="ticket-card">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <children>
                            <Label text="Buscar:" />
                            <TextField fx:id="txtBuscar" promptText="ID, película, sala..." prefWidth="200.0" styleClass="text-field" />
                            <Button fx:id="btnBuscar" onAction="#onBuscar" text="🔍" styleClass="icon-button" />
                        </children>
                    </HBox>
                </VBox>

                <!-- Tabla de funciones -->
                <TableView fx:id="tablaFunciones" styleClass="table-view" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="60.0" minWidth="50.0" />
                        <TableColumn fx:id="colPelicula" text="Película" prefWidth="200.0" minWidth="150.0" />
                        <TableColumn fx:id="colSala" text="Sala" prefWidth="80.0" minWidth="60.0" />
                        <TableColumn fx:id="colFechaHoraInicio" text="Inicio" prefWidth="110.0" minWidth="100.0" />
                        <TableColumn fx:id="colFechaHoraFin" text="Fin" prefWidth="110.0" minWidth="100.0" />
                        <TableColumn fx:id="colFormato" text="Formato" prefWidth="100.0" minWidth="80.0" />
                        <TableColumn fx:id="colTipoEstreno" text="Tipo Estreno" prefWidth="120.0" minWidth="100.0" />
                    </columns>
                </TableView>

                <!-- Botones de acción -->
                <HBox spacing="12.0" alignment="CENTER">
                    <children>
                        <Button fx:id="btnEliminar" onAction="#onEliminarFuncion" text="Eliminar" disable="true" styleClass="primary-button" />
                        <Button fx:id="btnVerDetalles" onAction="#onVerDetalles" text="Ver Detalles" disable="true" styleClass="link-button" />
                    </children>
                </HBox>

                <!-- Información adicional -->
                <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="summary-pane">
                    <children>
                        <Label fx:id="lblTotalFunciones" text="Total de funciones: 0" styleClass="summary-details" />
                        <Label fx:id="lblEstadisticas" text="" styleClass="summary-details" />
                    </children>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
