<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="550.0" prefWidth="800.0" stylesheets="@../temas/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.empleados.controladores.ControladorPerfil">
    <top>
        <HBox fx:id="headerBar" alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
            <children>
                <!-- Botón Regresar -->
                <Button fx:id="btnBack"
                        text="←"
                        onAction="#onVolver"
                        styleClass="stepper-button"/>                <Label text="Mi Perfil" styleClass="section-title" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>

            <Label styleClass="section-title" text="Información del Perfil" />

            <GridPane hgap="15.0" vgap="20.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>

                <Label text="Nombre Completo:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label" />
                <Label fx:id="lblNombreCompleto" text="-----" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="label" />

                <Label text="Cédula:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label" />
                <Label fx:id="lblCedula" text="-----" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="label" />

                <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="label" />
                <Label fx:id="lblUsuario" text="-----" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="label" />

                <Label text="Rol:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="label" />
                <Label fx:id="lblRol" text="-----" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="label" />

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="label" />
                <HBox spacing="10.0" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <children>
                        <TextField fx:id="txtEmail" promptText="Correo electrónico" editable="false" styleClass="text-field" />
                        <Button text="✎" onAction="#onEditarEmail" styleClass="icon-button" />
                    </children>
                </HBox>

                <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="label" />
                <HBox spacing="10.0" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <children>
                        <TextField fx:id="txtTelefono" promptText="Teléfono" editable="false" styleClass="text-field" />
                        <Button text="✎" onAction="#onEditarTelefono" styleClass="icon-button" />
                    </children>
                </HBox>
            </GridPane>

            <HBox spacing="15.0" alignment="CENTER">
                <Button fx:id="btnCambiarContrasena" onAction="#onCambiarContrasena" text="Cambiar Contraseña" styleClass="primary-button" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
