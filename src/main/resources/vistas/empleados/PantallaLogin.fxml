<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- stylesheets = "@ayu-theme.css" -->

<VBox alignment="CENTER" minHeight="500" minWidth="800" spacing="20.0" stylesheets="@../temas/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.empleados.controladores.ControladorLogin">

    <Label styleClass="title" text="CineMax">
        <font>
            <Font size="700.0" />
        </font>
    </Label>

    <TextField fx:id="txtUsuario" maxWidth="-Infinity" prefHeight="36.0" prefWidth="476.0" promptText="Usuario" />

    <PasswordField fx:id="txtPassword" maxWidth="-Infinity" prefHeight="36.0" prefWidth="476.0" promptText="Contraseña" />

    <Button fx:id="btnIngresar" styleClass="primary-button" onAction="#onLoginClick" prefHeight="45" prefWidth="192.0" text="Iniciar Sesión">
      <font>
         <Font size="18.0" />
      </font></Button>

    <Label fx:id="lblError" maxWidth="300" visible="false" wrapText="true" />
    <Hyperlink  fx:id="vinculoRecuperarContrasena" onAction="#onForgotPasswordClick" text="¿Olvidaste tu contraseña?">
        <font>
            <Font size="14.0" />
        </font>
    </Hyperlink>

</VBox>
