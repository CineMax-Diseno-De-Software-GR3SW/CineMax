<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="550.0" prefWidth="800.0" stylesheets="@../temas/styles.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinemax.empleados.controladores.ControladorPortalPrincipal">
    <top>
        <HBox fx:id="headerBar" alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
            <children>
                <Label text="Panel Principal" styleClass="section-title">
                    <font>
                        <Font name="Arial Black" size="28"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0"/>
            </padding>
            <Label styleClass="section-title" text="Panel Principal"/>
            <GridPane hgap="10.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <!-- Botones de Navegación Principal -->
            <Button fx:id="btnGestionPeliculas" onAction="#onGestionPeliculas" text="Gestión de Películas"
                    styleClass="primary-button"/>
            <Button fx:id="btnGestionCartelera" onAction="#onGestionCartelera" text="Gestión de Cartelera"
                    styleClass="primary-button"/>
            <Button fx:id="btnGestionFunciones" onAction="#onGestionFunciones" text="Gestión de Funciones"
                    styleClass="primary-button"/>
            <Button fx:id="btnSeleccionFuncion" onAction="#onSeleccionFuncion" text="Selección de Función"
                    styleClass="primary-button"/>

            <!-- Separador -->
            <Label text=""/>

            <!-- Otros Botones del Sistema -->
            <Button fx:id="btnGestionUsuarios" onAction="#onGestionUsuarios" text="Gestión de Usuarios"
                    styleClass="primary-button"/>
            <Button fx:id="btnVerReportes" onAction="#onVerReportes" text="Reportes" styleClass="primary-button"/>
            <Button fx:id="btnConfiguracionFunciones" onAction="#onConfiguracionFunciones"
                    text="Configuración de Funciones" styleClass="primary-button"/>
            <Button fx:id="btnConfiguracionSalas" onAction="#onConfiguracionSalas" text="Configuración de Salas"
                    styleClass="primary-button"/>
            <Button fx:id="btnConfiguracionButacas" onAction="#onConfiguracionButacas" text="Configuración de Butacas"
                    styleClass="primary-button"/>
            <Button fx:id="btnVentaBoleto" onAction="#onVenderBoleto" text="Venta de Boletos"
                    styleClass="primary-button"/>
        </VBox>
    </center>

    <left>
        <VBox alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="180.0" spacing="15.0"
              styleClass="summary-pane">
            <HBox alignment="BOTTOM_LEFT" maxWidth="175.0" prefWidth="90.0">
                <!-- Datos de sesión -->
                <VBox alignment="TOP_CENTER" maxWidth="153.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="468.0"
                      prefWidth="153.0" spacing="2" styleClass="side-bar">
                    <Label fx:id="lblNombreUsuario" prefHeight="26.0" prefWidth="172.0" text="-----"
                           textAlignment="CENTER" styleClass="section-title">
                        <font>
                            <Font size="20.0"/>
                        </font>
                    </Label>
                    <Label fx:id="lblRolUsuario" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="44.0"
                           prefWidth="150.0" text="-------" textAlignment="CENTER" styleClass="summary-details">
                        <font>
                            <Font name="System Bold Italic" size="15.0"/>
                        </font>
                    </Label>
                    <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" onAction="#onMiPerfil"
                            prefHeight="6.0" prefWidth="87.0" text="Mi Perfil" styleClass="primary-button"/>
                </VBox>
            </HBox>
            <Button onAction="#onCerrarSesion" text="Cerrar Sesión" styleClass="primary-button"/>
        </VBox>
    </left>
</BorderPane>