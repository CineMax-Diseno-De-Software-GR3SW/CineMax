<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="650.0" prefWidth="900.0" stylesheets="@../temas/styles.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinemax.venta_boletos.controladores.ControladorMostrarCartelera"
            styleClass="root-pane"> <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
            <children>
                <Button text="←" onAction="#handleRegresar" styleClass="stepper-button" /> <Label text="Cartelera CineMax" styleClass="section-title"> <font>
                        <Font name="Arial Black" size="22.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" /> </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <content>
                <VBox spacing="20.0" alignment="TOP_CENTER">
                    <padding>
                        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
                    </padding>
                    <children>
                        <Label text="Películas Disponibles" styleClass="section-title"/> <FlowPane fx:id="flowPanePeliculas"
                                  hgap="30.0" vgap="30.0"
                                  alignment="CENTER"
                                  prefWrapLength="800.0"> </FlowPane>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0" styleClass="footer-bar"> <children>
                <Button text="Seleccionar" onAction="#handleSeleccionar" styleClass="primary-button">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                    </padding>
                </Button>
            </children>
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>