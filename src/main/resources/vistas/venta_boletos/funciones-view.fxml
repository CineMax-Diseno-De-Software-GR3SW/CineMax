<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefWidth="800" prefHeight="550" stylesheets="@../temas/style.css"
            xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.cinemax.venta_boletos.Controladores.ControladorMostrarFunciones">

    <!-- ░░░s TOP BAR ░░░ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
            <children>
               <!-- Botón Regresar -->
                <Button text="←" onAction="#handleRegresar" styleClass="icon-button">
    <padding>
        <Insets left="10" right="10" top="5" bottom="5"/>
    </padding>
</Button>

                <!-- Título -->
                <Label text="Funciones Disponibles" styleClass="header-title">
                    <font>
                        <Font name="Arial Black" size="22"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ░░░ PANEL CENTRAL ░░░ -->
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="content-pane">
            <Label fx:id="peliculaTituloLabel" styleClass="subtitle-label"/>
            
            <TableView fx:id="tableViewFunciones" styleClass="content-list" 
                       prefWidth="600" prefHeight="400">
                <columns>
                    <TableColumn fx:id="columnaHora" text="Hora" prefWidth="300"/>
                    <TableColumn fx:id="columnaSala" text="Sala" prefWidth="300"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- ░░░ BOTONES ░░░ -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="button-bar">
            <Button text="Confirmar" onAction="#handleConfirmar" styleClass="primary-button">
                <padding>
                    <Insets left="20" right="20" top="10" bottom="10"/>
                </padding>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
