<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../temas/styles.css" 
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinemax.venta_boletos.Controladores.ControladorMostrarFunciones">

    <!-- ░░░s TOP BAR ░░░ -->
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #000000;">
            <Label fx:id="peliculaTituloLabel" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"
                   text="Tarjeta de película seleccionada: Barbie LIVE ACTION">
                <padding>
                    <Insets top="20" bottom="20"/>
                </padding>
            </Label>
        </VBox>
        
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
            <children>
                <Button text="←" onAction="#handleRegresar" styleClass="icon-button">
                    <padding>
                        <Insets left="10" right="10" top="5" bottom="5"/>
                    </padding>
                </Button>
                <Label text="Funciones Disponibles" styleClass="header-title">
                    <font>
                        <Font name="Arial Black" size="22"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ░░░ PANEL CENTRAL ░░░ -->
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="content-pane">
            <TableView fx:id="tableViewFunciones" styleClass="content-list"
                      VBox.vgrow="ALWAYS">
                <columns>
                        <TableColumn fx:id="colHora" text="Hora" prefWidth="100"/>
                        <TableColumn fx:id="colSala" text="Sala" prefWidth="120"/>
                        <TableColumn fx:id="colFormato" text="Formato" prefWidth="120"/>
                        <TableColumn fx:id="colTipoEstreno" text="Tipo Estreno" prefWidth="150"/>
                        <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100"/>
                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <!-- ░░░ BOTONES ░░░ -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="button-bar">
            <Button text="Confirmar" onAction="#handleConfirmar" styleClass="primary-button">
                <padding>
                    <Insets left="20" right="20" top="10" bottom="10"/>
                </padding>
            </Button>
        </HBox>
    </bottom>
</BorderPane>