<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefWidth="800" prefHeight="550" stylesheets="@../temas/styles.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinemax.venta_boletos.Controladores.ControladorMostrarCartelera">

    <!-- ░░░ TOP BAR ░░░ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
            <children>
                <!-- Botón Regresar -->
                <Button text="←" onAction="#handleRegresar" styleClass="icon-button">
    <padding>
        <Insets left="10" right="10" top="5" bottom="5"/>
    </padding>
</Button>


                <!-- Título -->
                <Label text="Cartelera CineMax" styleClass="header-title">
                    <font>
                        <Font name="Arial Black" size="22"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ░░░ PANEL CENTRAL ░░░ -->
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="content-pane">
            <Label text="Películas Disponibles" styleClass="subtitle-label"/>

            <ListView fx:id="listViewPeliculas" styleClass="content-list"
                      prefWidth="600" prefHeight="400">
                <!-- Las películas se cargarán dinámicamente -->
            </ListView>
        </VBox>
    </center>

    <!-- ░░░ BOTONES ░░░ -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="button-bar">
            <Button text="Seleccionar" onAction="#handleSeleccionar" styleClass="primary-button">
                <padding>
                    <Insets left="20" right="20" top="10" bottom="10"/>
                </padding>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
