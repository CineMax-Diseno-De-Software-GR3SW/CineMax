<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../temas/styles.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinemax.venta_boletos.controladores.ControladorMostrarFunciones">

    <!-- ░░░ TOP ░░░ -->
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #1e1e1e;">
            <Label fx:id="peliculaTituloLabel"
                   style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"
                   text="Funciones de: ">
                <padding>
                    <Insets top="20" bottom="10"/>
                </padding>
            </Label>

            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #1e1e1e; -fx-padding: 10;">
                <Button text="←" onAction="#handleRegresar" styleClass="stepper-button"/>
                <Label text="Funciones Disponibles" style="-fx-text-fill: white;">
                    <font>
                        <Font name="Arial Black" size="22"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <!-- ░░░ CENTER ░░░ -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #2a2a2a;">
            <TableView fx:id="tableViewFunciones" styleClass="content-list"
                       VBox.vgrow="ALWAYS"
                       prefHeight="400"
                       prefWidth="800">
                <columns>
                    <TableColumn fx:id="colHora" text="Hora" prefWidth="100"/>
                    <TableColumn fx:id="colSala" text="Sala" prefWidth="120"/>
                    <TableColumn fx:id="colFormato" text="Formato" prefWidth="120"/>
                    <TableColumn fx:id="colTipoEstreno" text="Tipo Estreno" prefWidth="150"/>
                    <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100"/>
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <!-- ░░░ BOTTOM ░░░ -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #1e1e1e; -fx-padding: 15;">
            <Button text="Confirmar" onAction="#handleConfirmar" styleClass="primary-button">
                <padding>
                    <Insets left="20" right="20" top="10" bottom="10"/>
                </padding>
            </Button>
        </HBox>
    </bottom>
</BorderPane>