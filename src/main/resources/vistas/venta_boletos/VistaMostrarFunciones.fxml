<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Separator?>

<BorderPane stylesheets="@../temas/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.venta_boletos.controladores.ControladorVisualizadorFunciones">
    <top>
        <VBox styleClass="header-vbox">
            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
                <children>
                    <Button onAction="#onRegresar" styleClass="stepper-button" text="←" />
                    <Label fx:id="etiquetaTituloPelicula" styleClass="section-title" text="Funciones de: ">
                        <font>
                            <Font name="Arial Black" size="22.0" />
                        </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                </children>
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                </padding>
            </HBox>

            <VBox spacing="8.0" style="-fx-background-color: #2a2a2a; -fx-padding: 10 20 10 20;">
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <Label style="-fx-text-fill: white;" text="Filtros:" styleClass="ticket-price" />
                </HBox>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <VBox spacing="3.0">
                        <Label text="Fecha:" style="-fx-text-fill: white;" />
                        <DatePicker fx:id="selectorFecha" styleClass="date-picker" />
                    </VBox>
                    <VBox spacing="3.0">
                        <Label text="Formato:" style="-fx-text-fill: white;" />
                        <ComboBox fx:id="cmbFiltroFormato" promptText="Todos" prefWidth="100.0" styleClass="combo-box" />
                    </VBox>
                    <VBox spacing="3.0">
                        <Label text="Tipo Sala:" style="-fx-text-fill: white;" />
                        <ComboBox fx:id="cmbFiltroTipoSala" promptText="Todos" prefWidth="120.0" styleClass="combo-box" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </top>

    <right>
        <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: #1e1e1e; -fx-padding: 15;" prefWidth="220">
            <ImageView fx:id="imagenPelicula" fitWidth="180" preserveRatio="true" />
            
            <HBox spacing="10.0">
                <VBox spacing="5.0" prefWidth="70">
                    <Label style="-fx-text-fill: #EAEAEA; -fx-font-weight: bold;" text="Género:" />
                    <Label style="-fx-text-fill: #EAEAEA; -fx-font-weight: bold;" text="Duración:" />
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="45.0" />
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label fx:id="etiquetaGenero" style="-fx-text-fill: #EAEAEA;" />
                    <Label fx:id="etiquetaDuracion" style="-fx-text-fill: #EAEAEA;" />
                </VBox>
            </HBox>
        </VBox>
    </right>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #2a2a2a;">
            <TableView fx:id="tablaFunciones" styleClass="content-list" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="columnaHora" minWidth="80" prefWidth="-1" text="Hora" />
                    <TableColumn fx:id="columnaSala" minWidth="80" prefWidth="-1" text="Sala" />
                    <TableColumn fx:id="columnaTipoSala" minWidth="100" prefWidth="-1" text="Tipo Sala" />
                    <TableColumn fx:id="columnaFormato" minWidth="100" prefWidth="-1" text="Formato" />
                    <TableColumn fx:id="columnaTipoEstreno" minWidth="120" prefWidth="-1" text="Tipo Estreno" />
                    <TableColumn fx:id="columnaPrecio" minWidth="80" prefWidth="-1" text="Precio" />
                    <TableColumn fx:id="columnaFecha" minWidth="100" prefWidth="-1" text="Fecha" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #1e1e1e; -fx-padding: 15;">
            <Button onAction="#onConfirmacion" styleClass="primary-button" text="Confirmar">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
            </Button>
        </HBox>
    </bottom>
</BorderPane>