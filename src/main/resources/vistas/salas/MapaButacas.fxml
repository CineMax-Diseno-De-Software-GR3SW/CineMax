<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cinemax.salas.controladores.ControladorDeConsultaSalas"
            prefWidth="800" prefHeight="500">
    <ComboBox fx:id="comboSalas" layoutX="20" layoutY="20" prefWidth="200"/>
    <VBox fx:id="vbox" alignment="CENTER" spacing="20"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="60"
          AnchorPane.bottomAnchor="0">
        <Label text="Pantalla" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <GridPane fx:id="gridButacas"
                  hgap="10" vgap="10"
                  alignment="CENTER"/>
        <HBox spacing="20" alignment="CENTER">
            <Rectangle width="20" height="20" fill="green"/>
            <Label text="Disponible"/>
            <Rectangle width="20" height="20" fill="red"/>
            <Label text="Ocupada"/>
            <Rectangle width="20" height="20" fill="gray"/>
            <Label text="Inhabilitada"/>
        </HBox>
    </VBox>
</AnchorPane>