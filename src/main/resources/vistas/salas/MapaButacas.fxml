<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.ClosePath?>
<?import javafx.scene.shape.LineTo?>
<?import javafx.scene.shape.MoveTo?>
<?import javafx.scene.shape.Path?>
<?import javafx.scene.shape.QuadCurveTo?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane maxHeight="Infinity" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-font-family: 'Segoe UI Emoji','Segoe UI', Arial, sans-serif;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.salas.controladores.ControladorDeConsultaSalas">

    <!-- CENTER: Main content -->
    <center>
        <VBox fx:id="vbox" alignment="TOP_CENTER" maxHeight="Infinity" maxWidth="Infinity" spacing="18" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #f5f5f5;" text="Pantalla" VBox.vgrow="NEVER" />
            <HBox alignment="CENTER" VBox.vgrow="NEVER">
                <AnchorPane minHeight="100" minWidth="400">
                    <Path fill="transparent" stroke="#FF9800" strokeLineCap="ROUND" strokeWidth="12">
                        <elements>
                            <MoveTo x="10" y="40" />
                            <QuadCurveTo controlX="200" controlY="0" x="390" y="40" />
                        </elements>
                    </Path>
                    <Path fill="linear-gradient(from 0% 0% to 0% 100%, rgba(255,255,255,0.4) 60%, transparent 100%)" stroke="transparent">
                        <elements>
                            <MoveTo x="10" y="46" />
                            <QuadCurveTo controlX="200" controlY="6" x="390" y="46" />
                            <LineTo x="390" y="50" />
                            <LineTo x="10" y="50" />
                            <ClosePath />
                        </elements>
                    </Path>
                </AnchorPane>
            </HBox>
            <GridPane fx:id="gridButacas" alignment="CENTER" hgap="10" maxHeight="Infinity" maxWidth="Infinity" style="-fx-background-color: transparent;" vgap="10" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets bottom="0" left="0" right="0" top="-35" />
                </VBox.margin>
            </GridPane>
            <HBox alignment="CENTER" spacing="20" VBox.vgrow="NEVER">
                <Rectangle arcHeight="16" arcWidth="16" fill="green" height="30" width="30" />
                <Label style="-fx-text-fill: #f5f5f5;" text="Disponible" />
                <Rectangle arcHeight="16" arcWidth="6" fill="#02487B" height="30" width="30" />
                <Label style="-fx-text-fill: #f5f5f5;" text="Seleccionada" />
            <Rectangle arcHeight="16" arcWidth="16" fill="#ffa600" height="30" width="30" />
            <Label style="-fx-text-fill: #f5f5f5;" text="Reservada" />
                <Rectangle arcHeight="16" arcWidth="16" fill="#791213" height="30" width="30" />
                <Label style="-fx-text-fill: #f5f5f5;" text="Ocupada" />
                <Rectangle arcHeight="16" arcWidth="16" fill="#454545" height="30" width="30" />
                <Label style="-fx-text-fill: #f5f5f5;" text="Inhabilitada" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
