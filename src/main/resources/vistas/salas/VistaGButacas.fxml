<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            prefHeight="550.0" prefWidth="800.0"
            fx:controller="com.cinemax.salas.controladores.ControladorButacas"
            stylesheets="@../temas/styles.css"
            styleClass="root">

    <!-- HEADER -->
    <top>
        <BorderPane styleClass="header-bar">
            <left>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button fx:id="btnBack" text="â†" styleClass="stepper-button" onAction="#onBackAction" />
                    <Label text="GestiÃ³n de Butacas" styleClass="section-title"/>
                </HBox>
            </left>
        </BorderPane>
    </top>

    <!-- CENTER -->
    <center>
        <GridPane hgap="24" vgap="0" style="-fx-padding: 24;">
            <columnConstraints>
                <ColumnConstraints percentWidth="35"/>
                <ColumnConstraints percentWidth="65"/>
            </columnConstraints>

            <!-- Panel Izquierdo: Formulario -->
            <VBox spacing="18" styleClass="ticket-card" GridPane.columnIndex="0" alignment="TOP_CENTER">
                <Label text="Datos de la Butaca" styleClass="section-title"/>
                <GridPane hgap="12" vgap="14">
                    <Label text="Fila:*" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label"/>
                    <TextField fx:id="txtFila" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field"/>
                    <Label text="Columna:*" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label"/>
                    <TextField fx:id="txtColumna" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="text-field"/>
                    <Label text="Estado:*" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label"/>
                    <ComboBox fx:id="cmbEstado" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="combo-box"/>
                    <Label text="Sala:*" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label"/>
                    <ComboBox fx:id="cmbSala" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="combo-box"/>
                </GridPane>
                <Button text="Crear" onAction="#crearButaca" styleClass="primary-button" maxWidth="Infinity"/>
            </VBox>

            <!-- Panel Derecho: BÃºsqueda y Tabla -->
            <VBox spacing="16" styleClass="ticket-card" GridPane.columnIndex="1" alignment="TOP_CENTER">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Buscar ID Sala:"/>
                    <TextField fx:id="txtBuscarIdSala" promptText="ID Sala..." prefWidth="200.0" styleClass="text-field"/>
                    <Button text="ðŸ”" onAction="#listarButacasPorSala" styleClass="icon-button"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
                <TableView fx:id="tablaButacas" prefHeight="350" styleClass="tabla">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50">
                            <graphic><Label text="ID"/></graphic>
                            <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colFila" prefWidth="80">
                            <graphic><Label text="Fila"/></graphic>
                            <cellValueFactory><PropertyValueFactory property="fila"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colColumna" prefWidth="80">
                            <graphic><Label text="Columna"/></graphic>
                            <cellValueFactory><PropertyValueFactory property="columna"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colEstado" prefWidth="100">
                            <graphic><Label text="Estado"/></graphic>
                            <cellValueFactory><PropertyValueFactory property="estado"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colIdSala" prefWidth="100">
                            <graphic><Label text="ID Sala"/></graphic>
                            <cellValueFactory><PropertyValueFactory property="salaId"/></cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <HBox spacing="16" alignment="CENTER">
                     <Button text="Actualizar" onAction="#actualizarButaca" styleClass="primary-button" maxWidth="Infinity"/>
                     <Button text="Eliminar" onAction="#eliminarButaca" styleClass="primary-button" maxWidth="Infinity"/>
                </HBox>
            </VBox>
        </GridPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="ticket-card">
            <Label fx:id="lblTotalButacas" text="Total Butacas: 0" styleClass="label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblEstadoFooter" text="Listo" styleClass="label"/>
        </HBox>
    </bottom>
</BorderPane>
