<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cinemax.salas.controladores.ControladorButacas"
            style="-fx-background-color: linear-gradient(to bottom, #23272e 0%, #181a20 100%);
                   -fx-font-family: 'Segoe UI Emoji','Segoe UI', Arial, sans-serif;">

    <!-- Encabezado -->
    <top>
        <HBox alignment="center" style="-fx-background-color: #181a20;">
            <Label text="Gestión de Butacas"
                   style="-fx-font-family: 'Georgia', 'Times New Roman', serif;
                          -fx-font-size: 34px;
                          -fx-font-weight: bold;
                          -fx-padding: 28 0 28 0;
                          -fx-text-fill: linear-gradient(to bottom, #FFA726 60%, #FF9800 100%);
                          -fx-effect: dropshadow(gaussian, #000000cc, 16, 0.4, 0, 4);
                          -fx-letter-spacing: 2px;"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.36">
            <!-- IZQUIERDA: Formulario + Botones CRUD -->
            <VBox spacing="18" style="-fx-background-color: #23272e; -fx-background-radius: 12; -fx-padding: 24;">
                <TitledPane text="Datos de la Butaca" expanded="true"
                            style="-fx-font-size: 17px; -fx-text-fill: #FFA726;">
                    <content>
                        <GridPane hgap="16" vgap="16"
                                  style="-fx-background-color: #23272e;
                                         -fx-padding: 16;
                                         -fx-background-radius: 12;">
                            <Label text="Fila:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                   style="-fx-text-fill: #f5f5f5;"/>
                            <TextField fx:id="txtFila"
                                       GridPane.rowIndex="0" GridPane.columnIndex="1"
                                       prefWidth="120"/>

                            <Label text="Columna:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                   style="-fx-text-fill: #f5f5f5;"/>
                            <TextField fx:id="txtColumna"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1"
                                       prefWidth="120"/>

                            <Label text="Estado:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                                   style="-fx-text-fill: #f5f5f5;"/>
                            <ComboBox fx:id="cmbEstado"
                                      GridPane.rowIndex="2" GridPane.columnIndex="1"
                                      prefWidth="140"/>

                            <Label text="Sala:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                                   style="-fx-text-fill: #f5f5f5;"/>
                            <ComboBox fx:id="cmbSala"
                                      GridPane.rowIndex="3" GridPane.columnIndex="1"
                                      prefWidth="140"/>
                        </GridPane>
                    </content>
                </TitledPane>

                <!-- Botones CRUD en dos filas horizontales -->
                <HBox spacing="16" alignment="CENTER">
                    <Button text="🆕 Crear"      onAction="#crearButaca"      prefWidth="140"/>
                    <Button text="✏️ Actualizar" onAction="#actualizarButaca" prefWidth="140"/>
                </HBox>
                <HBox spacing="16" alignment="CENTER">
                    <Button text="🗑️ Eliminar"  onAction="#eliminarButaca"   prefWidth="140"/>
                    <Button text="🧹 Limpiar"    onAction="#limpiarCampos"    prefWidth="140"/>
                </HBox>
            </VBox>

            <!-- DERECHA: Buscador + Tabla -->
            <VBox spacing="16"
                  style="-fx-background-color: #23272e; -fx-background-radius: 12; -fx-padding: 0 0 0 16;">
                <!-- Buscador -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="txtBuscarIdSala"
                               promptText="Buscar por ID Sala"
                               prefWidth="160"/>
                    <Button text="🔍" onAction="#listarButacasPorSala"/>
                    <Button text="Listar todas" onAction="#listarTodasButacas"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblEstado" text="Listo"/>
                </HBox>

                <!-- Tabla -->
                <TableView fx:id="tablaButacas"
                           prefHeight="360"
                           style="-fx-control-inner-background: #23272e;
                                  -fx-table-cell-border-color: transparent;
                                  -fx-border-color: #23272e;">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colFila" text="Fila" prefWidth="80"/>
                        <TableColumn fx:id="colColumna" text="Columna" prefWidth="80"/>
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                        <TableColumn fx:id="colIdSala" text="ID Sala" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </center>

    <!-- BOTTOM: barra de estado -->
    <bottom>
        <HBox alignment="CENTER_LEFT"
              style="-fx-background-color:#181a20; -fx-padding:8 32;">
            <Label text="© CineMax" style="-fx-text-fill:#555;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblEstado" text="Listo" style="-fx-text-fill:#FFA726;"/>
        </HBox>
    </bottom>
</BorderPane>
