<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            prefHeight="550.0" prefWidth="800.0"
            fx:controller="com.cinemax.salas.controladores.ControladorSalas"
            stylesheets="@../temas/styles.css"
            styleClass="root">

    <!-- HEADER -->
    <top>
        <BorderPane styleClass="header-bar">
            <left>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button fx:id="btnBack" text="←" styleClass="stepper-button" onAction="#onBackAction" />
                    <Label text="Gestión de Salas" styleClass="section-title"/>
                </HBox>
            </left>
        </BorderPane>
    </top>

    <!-- CENTER -->
    <center>
        <GridPane hgap="24" vgap="0" style="-fx-padding: 24;">
            <columnConstraints>
                <ColumnConstraints percentWidth="35"/>
                <ColumnConstraints percentWidth="65"/>
            </columnConstraints>
            <!-- Panel Izquierdo: Formulario de gestión de salas -->
            <VBox spacing="18" styleClass="ticket-card" GridPane.columnIndex="0" alignment="TOP_CENTER">
                <Label text="Datos de la Sala" styleClass="section-title"/>
                <GridPane hgap="12" vgap="14">
                    <Label text="Nombre:*" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label"/>
                    <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field"/>
                    <Label text="Capacidad:*" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label"/>
                    <ComboBox fx:id="cmbCapacidad" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="combo-box"/>
                    <Label text="Tipo:*" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label"/>
                    <ComboBox fx:id="cmbTipo" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="combo-box"/>
                    <Label text="Estado:*" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label"/>
                    <ComboBox fx:id="cmbEstado" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="combo-box"/>
                </GridPane>
                <Button text="Crear" onAction="#crearSala" styleClass="primary-button" maxWidth="Infinity"/>
            </VBox>

            <!-- Panel Derecho: Búsqueda, tabla y acciones -->
            <VBox spacing="16" styleClass="ticket-card" GridPane.columnIndex="1" alignment="TOP_CENTER">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Buscar:"/>
                    <TextField fx:id="txtBuscarId" promptText="ID,..." prefWidth="200.0" styleClass="text-field"/>
                    <Button text="🔍" onAction="#buscarSalaPorId" styleClass="icon-button"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
                <TableView fx:id="tablaSalas" prefHeight="350" styleClass="tabla">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="60">
                            <graphic><Label text="ID"/></graphic>
                        </TableColumn>
                        <TableColumn fx:id="colNombre" prefWidth="180">
                            <graphic><Label text="Nombre"/></graphic>
                        </TableColumn>
                        <TableColumn fx:id="colCapacidad" prefWidth="100">
                            <graphic><Label text="Capacidad"/></graphic>
                        </TableColumn>
                        <TableColumn fx:id="colTipo" prefWidth="120">
                            <graphic><Label text="Tipo"/></graphic>
                        </TableColumn>
                        <TableColumn fx:id="colEstado" prefWidth="120">
                            <graphic><Label text="Estado"/></graphic>
                        </TableColumn>
                    </columns>
                </TableView>
                <HBox spacing="16" alignment="CENTER">
                    <Button text="Actualizar" onAction="#actualizarSala" styleClass="primary-button"/>
                    <Button text="Eliminar" onAction="#eliminarSala" styleClass="primary-button"/>
                </HBox>
            </VBox>
        </GridPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="ticket-card">
            <Label fx:id="lblTotalSalas" text="Total Salas: 0" styleClass="label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblEstado" />
        </HBox>
    </bottom>

</BorderPane>
