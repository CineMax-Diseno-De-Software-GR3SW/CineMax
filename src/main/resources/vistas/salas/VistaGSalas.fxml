<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cinemax.salas.controladores.ControladorSalas"
            style="-fx-background-color: linear-gradient(to bottom, #23272e 0%, #181a20 100%);
                   -fx-font-family: 'Segoe UI Emoji','Segoe UI', Arial, sans-serif;">

    <top>
        <BorderPane style="-fx-background-color: #181a20; -fx-padding: 16;">
            <left>
                <Button fx:id="btnBack"
                        text="←"
                        onAction="#onBackAction"
                        prefWidth="48"
                        style="-fx-font-family: 'Segoe UI Emoji', 'Segoe UI', Arial, sans-serif; -fx-background-color: linear-gradient(to bottom, #FFA726, #FF9800); -fx-text-fill: #fff; -fx-font-weight: bold; -fx-background-radius: 10; -fx-font-size: 18px;"/>
            </left>
            <center>
                <Label text="Gestión de Salas"
                       style="-fx-font-family: 'Georgia', 'Times New Roman', serif;
                          -fx-font-size: 34px;
                          -fx-font-weight: bold;
                          -fx-padding: 28 0 28 0;
                          -fx-text-fill: linear-gradient(to bottom, #FFA726 60%, #FF9800 100%);
                          -fx-effect: dropshadow(gaussian, #000000cc, 16, 0.4, 0, 4);
                          -fx-letter-spacing: 2px;"/>
            </center>
        </BorderPane>
    </top>

    <!-- CENTER: SplitPane con fondo oscuro -->
    <center>
        <SplitPane dividerPositions="0.35"
                   style="-fx-background-color: #23272e; -fx-padding: 16;">
            <items>

                <!-- IZQUIERDA: Formulario + CRUD -->
                <VBox spacing="24"
                      style="-fx-background-color: #23272e; -fx-padding: 24; -fx-background-radius: 12;">
                    <TitledPane text="Datos de la Sala" expanded="true" collapsible="false"
                                style="-fx-font-size: 16px; -fx-text-fill: #FFA726;
                                       -fx-background-color: #23272e; -fx-background-radius: 8;">
                        <content>
                            <GridPane hgap="12" vgap="14"
                                      style="-fx-background-color: #23272e;
                                             -fx-background-radius: 8;
                                             -fx-padding: 16;">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="100"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>

                                <Label text="Nombre:*" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #f5f5f5;"/>
                                <TextField fx:id="txtNombre"
                                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                                           prefWidth="250"/>

                                <Label text="Capacidad:*" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #f5f5f5;"/>
                                <ComboBox fx:id="cmbCapacidad"
                                          GridPane.rowIndex="1" GridPane.columnIndex="1"
                                          prefWidth="120"
                                          promptText="36|42|48"/>

                                <Label text="Tipo:*" GridPane.rowIndex="2" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #f5f5f5;"/>
                                <ComboBox fx:id="cmbTipo"
                                          GridPane.rowIndex="2" GridPane.columnIndex="1"
                                          prefWidth="140"/>

                                <Label text="Estado:*" GridPane.rowIndex="3" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #f5f5f5;"/>
                                <ComboBox fx:id="cmbEstado"
                                          GridPane.rowIndex="3" GridPane.columnIndex="1"
                                          prefWidth="140"/>
                            </GridPane>
                        </content>
                    </TitledPane>

                    <!-- Botones CRUD en vertical -->
                    <!-- Botones CRUD en dos filas, bien distribuidos y tamaño fijo -->
                    <HBox spacing="16" alignment="CENTER">
                        <Button text="🆕 Crear"      onAction="#crearSala"      prefWidth="140"/>
                        <Button text="✏️ Actualizar" onAction="#actualizarSala" prefWidth="140"/>
                    </HBox>
                    <HBox spacing="16" alignment="CENTER">
                        <Button text="🗑️ Eliminar"  onAction="#eliminarSala"   prefWidth="140"/>
                        <Button text="🧹 Limpiar"    onAction="#limpiarCampos"  prefWidth="140"/>
                    </HBox>
                </VBox>

                <!-- DERECHA: Buscador + Tabla -->
                <VBox spacing="16"
                      style="-fx-background-color: #23272e; -fx-background-radius: 12; -fx-padding: 0 0 0 16;">
                    <!-- Buscador -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="txtBuscarId"
                                   promptText="Buscar sala por ID"
                                   prefWidth="160"/>
                        <Button text="🔍" onAction="#buscarSalaPorId"/>
                        <Button text="Listar todas" onAction="#listarTodasSalas"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="lblEstado" text="Listo"/>
                    </HBox>

                    <!-- Tabla -->
                    <TableView fx:id="tablaSalas"
                               prefHeight="360"
                               style="-fx-control-inner-background: #23272e;
                                      -fx-table-cell-border-color: transparent;
                                      -fx-border-color: #23272e;">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
                            <TableColumn fx:id="colCapacidad" text="Capacidad" prefWidth="100"/>
                            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                            <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <!-- BOTTOM: barra de estado -->
    <bottom>
        <HBox alignment="CENTER_LEFT"
              style="-fx-background-color:#181a20; -fx-padding:8 32;">
            <Label text="© CineMax" style="-fx-text-fill:#555;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblEstado" text="Conexión OK" style="-fx-text-fill:#FFA726;"/>
        </HBox>
    </bottom>
</BorderPane>