<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="1000" stylesheets="@../temas/ayu-theme.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinemax.reportes.controladores.ControladorDashboard">

    <!-- ░░░ BARRA SUPERIOR ░░░ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
            <children>
                <Label text="Gestión de Reportes - Dashboard" styleClass="section-title">
                    <font><Font name="Arial Black" size="20"/></font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ░░░ MENÚ LATERAL ░░░ -->
    <left>
        <VBox spacing="10" styleClass="summary-pane">
            <children>
                <Button text="ReportesPrincipal" onAction="#onGoToReportes" maxWidth="Infinity"/>
                <Button text="Reportes Programados" onAction="#onGoToGeneracion" maxWidth="Infinity"/>
                <Button text="Dashboard" onAction="#goToDashboard" maxWidth="Infinity"/>
                <Region VBox.vgrow="ALWAYS"/>
                <Button text="Log Out" onAction="#onSalir" styleClass="logout-btn" maxWidth="Infinity"/>
            </children>
        </VBox>
    </left>

    <!-- ░░░ DASHBOARD DE GRÁFICOS ░░░ -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Fila 1: Ingresos y categorías -->
            <HBox spacing="20" alignment="CENTER">
                <AreaChart fx:id="areaChartIngresos" prefHeight="250" prefWidth="450">
                    <xAxis><CategoryAxis/></xAxis>
                    <yAxis><NumberAxis/></yAxis>
                </AreaChart>
                <PieChart fx:id="pieChartCategorias" prefHeight="250" prefWidth="400"/>
            </HBox>

            <!-- Fila 2: Entradas y películas -->
            <HBox spacing="20" alignment="CENTER">
                <BarChart fx:id="barChartEntradas" prefHeight="250" prefWidth="450">
                    <xAxis><CategoryAxis/></xAxis>
                    <yAxis><NumberAxis/></yAxis>
                </BarChart>
                <BarChart fx:id="barChartTopPeliculas" prefHeight="250" prefWidth="400">
                    <xAxis><CategoryAxis/></xAxis>
                    <yAxis><NumberAxis/></yAxis>
                </BarChart>
            </HBox>
        </VBox>
    </center>
</BorderPane>
