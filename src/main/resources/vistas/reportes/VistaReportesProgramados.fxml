<?xml version="1.0" encoding="UTF-8"?>

<!-- 
     ═══════════════════════════════════════════════════════════════════════════════
     VISTA DE REPORTES PROGRAMADOS - CINEMAX
     ═══════════════════════════════════════════════════════════════════════════════
     
     Esta vista FXML define la interfaz para gestionar reportes automáticos programados.
     Permite programar reportes con diferentes frecuencias (diario, semanal, mensual, etc.)
     y visualizar los reportes ya programados o ejecutados.
     
     Controlador asociado: ControladorReportesProgramados
     ═══════════════════════════════════════════════════════════════════════════════
-->

<!-- Importaciones de componentes JavaFX necesarios para la interfaz -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 
     CONTENEDOR PRINCIPAL - BorderPane
     Organiza la interfaz en regiones: top (barra superior), center (contenido principal), left (panel lateral)
     Dimensiones: 800x550 píxeles para una ventana más compacta
     Aplica hoja de estilos personalizada del sistema
-->
<BorderPane prefHeight="550" prefWidth="800" stylesheets="@../temas/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.reportes.controladores.ControladorReportesProgramados">
   
   <!-- ░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░ -->
   <!-- BARRA SUPERIOR (TOP) -->
   <!-- Contiene navegación y título de la sección -->
   <!-- ░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░ -->
   <top>
      <!-- Contenedor horizontal para elementos de la barra superior -->
      <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
         <children>
            <!-- Botón de regreso con flecha izquierda -->
            <Button fx:id="btnBack" onAction="#volverEscena" styleClass="stepper-button" text="←" />
            
            <!-- Título principal de la sección con fuente en negrita -->
            <Label styleClass="section-title" text="Gestión de Reportes">
               <font>
                  <Font name="Arial Black" size="22" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   
   <!-- ░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░ -->
   <!-- CONTENIDO PRINCIPAL (CENTER) -->
   <!-- Contiene formulario de programación y tabla de reportes -->
   <!-- ░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░ -->
   <center>
      <!-- Contenedor vertical principal con espaciado entre elementos -->
      <VBox spacing="12">
         <children>
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- TÍTULO DE LA SECCIÓN INTERNA -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <HBox alignment="CENTER">
               <children>
                  <!-- Título centrado para la generación de reportes -->
                  <Label alignment="CENTER" contentDisplay="TOP" prefHeight="38.0" prefWidth="275.0" styleClass="section-title" stylesheets="@CineMax/src/main/resources/vistas/temas/ayu-theme.css" text="Generacion de Reporte" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- INSTRUCCIONES PARA EL USUARIO -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <VBox maxWidth="620" prefWidth="620" spacing="12">
               <children>
                  <!-- Etiqueta con instrucciones para el usuario -->
                  <Label styleClass="summary-title" stylesheets="@CineMax/src/main/resources/vistas/temas/ayu-theme.css" text="Seleccione las opciones para generar un reporte" />
               </children>
            </VBox>
            
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- FORMULARIO DE PROGRAMACIÓN Y TABLA DE REPORTES -->
            <!-- Panel principal que contiene todos los controles de la interfaz -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <AnchorPane>
                  <children>
                     <!-- ═══ SECCIÓN DE SELECCIÓN DE FRECUENCIA ═══ -->
                     <!-- Etiqueta descriptiva para la selección de frecuencia -->
                     <Label layoutX="30.0" layoutY="63.0" text="Programar cada: " />
                     
                     <!-- ComboBox para seleccionar la frecuencia de programación -->
                     <!-- Permite elegir entre: Diario, Semanal, Mensual, Trimestral, Anual -->
                     <ComboBox fx:id="elegirFrecuencia" layoutX="191.0" layoutY="60.0" prefWidth="150.0" promptText="Seleccionar la frecuencia de programación" />
                     
                     <!-- Botón para confirmar la programación del reporte -->
                     <Button layoutX="421.0" layoutY="85.0" onAction="#confirmarReporteProgramado" prefHeight="46.0" prefWidth="129.0" styleClass="primary-button" text="Confirmar" />
            
                     <!-- ═══════════════════════════════════════════════════════════════ -->
                     <!-- TABLA DE REPORTES PROGRAMADOS -->
                     <!-- Muestra todos los reportes que han sido programados o ejecutados -->
                     <!-- Se posiciona usando AnchorPane para ocupar todo el espacio disponible -->
                     <!-- ═══════════════════════════════════════════════════════════════ -->
                     <TableView fx:id="tablaReportesGenerados" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="170.0">
                        <columns>
                              <!-- Columna para mostrar el nombre descriptivo del reporte -->
                              <TableColumn fx:id="columnaNombre" prefWidth="151.20002126693726" text="Nombre del Reporte" />
                              
                              <!-- Columna para mostrar la fecha de generación programada o real -->
                              <TableColumn fx:id="columnaFecha" prefWidth="155.2000274658203" text="Fecha Generación" />
                              
                              <!-- Columna para mostrar el estado actual del reporte -->
                              <!-- Estados posibles: Programado, Ejecutando, Completado, Error -->
                              <TableColumn fx:id="columnaEstado" prefWidth="110.4000244140625" text="Estado" />
                              
                              <!-- Columna para botones de acciones sobre cada reporte -->
                              <!-- Incluye: Ver, Descargar PDF, Descargar CSV, Eliminar -->
                              <TableColumn fx:id="columnaAcciones" prefWidth="123.99996948242188" text="Acciones" />
                        </columns>
                     </TableView>
                  </children>
            </AnchorPane>
         </children>
      </VBox>
   </center>
   
   <!-- ░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░ -->
   <!-- PANEL LATERAL IZQUIERDO (LEFT) -->
   <!-- Contiene opciones de navegación y funciones relacionadas -->
   <!-- ░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░ -->
   <left>
      <!-- Contenedor vertical para elementos del panel lateral -->
      <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="235.0" spacing="10" styleClass="summary-pane">
         <children>
            <!-- Botón para navegar de vuelta a la vista principal de reportes -->
            <Button mnemonicParsing="false" onAction="#goToReportesPrincipal" styleClass="primary-button" text="ReportesPrincipal" />
            
            <!-- Región flexible que ocupa todo el espacio vertical restante -->
            <!-- Esto empuja los elementos hacia arriba y mantiene el diseño consistente -->
            <Region VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </left>
   
</BorderPane>
