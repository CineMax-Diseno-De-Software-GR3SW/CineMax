<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700" prefWidth="1200" stylesheets="@../temas/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.reportes.controladores.ControladorReportesPrincipal">

    <!-- ░░░ TOP BAR ░░░ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
            <children>
                <!-- Botón Regresar -->
                <Button fx:id="btnBack" onAction="#onBackAction" styleClass="stepper-button" text="←" />

                <!-- Título -->
                <Label styleClass="section-title" text="Gestión de Reportes">
                    <font><Font name="Arial Black" size="22" /></font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ░░░ PANEL CENTRAL ░░░ -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox alignment="TOP_CENTER" spacing="16" style="-fx-padding: 20;">
                <!-- Filtros -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Desde:" />
                    <DatePicker fx:id="dateDesde" />
                    <Label text="Hasta:" />
                    <DatePicker fx:id="dateHasta" styleClass="date-picker" />
                    <Label text="Horario:" />
                    <ChoiceBox fx:id="choiceHorario" prefWidth="100" />
                    <Button fx:id="btnFiltrar" onAction="#onFiltrar" styleClass="primary-button" text="Filtrar" />
                </HBox>

                <!-- Gráficas -->
                <HBox alignment="TOP_CENTER" spacing="20">
                    <VBox spacing="8">
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Ventas por Tipo de Boleto" />
                        <BarChart fx:id="barChart" prefHeight="300" prefWidth="500">
                            <xAxis>
                                <CategoryAxis label="Fecha" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Cantidad de Boletos" />
                            </yAxis>
                        </BarChart>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Distribución 2D vs 3D" />
                        <PieChart fx:id="pieChart" prefHeight="300" prefWidth="300" />
                    </VBox>
                </HBox>

                <!-- Botón de confirmación -->
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="btnConfirmar" onAction="#onConfirmarReporte" styleClass="primary-button" text="Confirmar" />
                </HBox>

                <!-- Tabla de Reportes Generados -->
                <VBox spacing="10">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Reportes Generados" />
                    <TableView fx:id="tablaReportes" prefHeight="200" styleClass="report-table">
                        <columns>
                            <TableColumn fx:id="colNombre" prefWidth="200" text="Nombre" />
                            <TableColumn fx:id="colTipo" prefWidth="80" text="Tipo" />
                            <TableColumn fx:id="colFecha" prefWidth="150" text="Fecha Generación" />
                            <TableColumn fx:id="colDescripcion" prefWidth="300" text="Descripción" />
                            <TableColumn fx:id="colAcciones" prefWidth="100" text="Acciones" />
                        </columns>
                    </TableView>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- ░░░ FRANJA IZQUIERDA CON DATOS DE SESIÓN ░░░ -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="233.0" spacing="10" styleClass="summary-pane">
            <children>
            <Button mnemonicParsing="false" styleClass="primary-button" text="Modulo Reporte" />
            <Button mnemonicParsing="false" onAction="#goToReporteProgramado" styleClass="primary-button" text="Reporte Programado" />
                <!-- Espaciador que empuja el botón Log Out al fondo -->
                <Region VBox.vgrow="ALWAYS" />

                <Button onAction="#onCerrarSesion" styleClass="primary-button" text="Log Out" />
            </children>
        </VBox>
    </left>

</BorderPane>
