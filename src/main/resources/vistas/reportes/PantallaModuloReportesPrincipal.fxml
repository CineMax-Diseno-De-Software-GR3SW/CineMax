<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="550" prefWidth="800" stylesheets="@../temas/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.reportes.controladores.ControladorReportesPrincipal">

    <!-- ░░░ TOP BAR ░░░ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
            <children>
                <!-- Botón Regresar -->
                <Button fx:id="btnBack" onAction="#onBackAction" styleClass="icon-button" text="←" />

                <!-- Título -->
                <Label styleClass="section-title" text="Gestión de Reportes">
                    <font><Font name="Arial Black" size="22" /></font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ░░░ PANEL CENTRAL ░░░ -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="16">
            <!-- Filtros -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Desde:" />
                <DatePicker fx:id="dateDesde" />
                <Label text="Hasta:" />
                <DatePicker fx:id="dateHasta" styleClass="date-picker" />
                <Label text="Horario:" />
                <ChoiceBox fx:id="choiceHorario" prefWidth="100" />
                <!--<Button text="Filtrar" onAction="#onFiltrar"/>-->
                <Button styleClass="primary-button" text="Filtrar" />

            </HBox>

            <!-- Vista previa: Tabla y gráfica -->
            <HBox alignment="TOP_CENTER" spacing="16">
                <VBox spacing="8" />
                <VBox spacing="8">
                    <Label text="Gráfica de ventas" />
                    <BarChart fx:id="barChart" prefHeight="250" prefWidth="300">
                        <xAxis>
                            <CategoryAxis label="Categoría" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Cantidad" />
                        </yAxis>
                    </BarChart>
                </VBox>
            </HBox>
            <!-- Botón de exportar debajo, alineado a la derecha -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <MenuButton fx:id="menuExportar" styleClass="primary-button" text="Exportar">
                    <items>
                        <MenuItem fx:id="menuExportarPDF" text="Exportar como PDF" />
                        <MenuItem fx:id="menuExportarCSV" text="Exportar como CSV" />
                    </items>
                </MenuButton>
            </HBox>
        </VBox>
    </center>

    <!-- ░░░ FRANJA IZQUIERDA CON DATOS DE SESIÓN ░░░ -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="233.0" spacing="10" styleClass="summary-pane">
            <children>
            <Button mnemonicParsing="false" styleClass="primary-button" text="Modulo Reporte" />
            <Button mnemonicParsing="false" onAction="#goToReporteProgramado" styleClass="primary-button" text="Reporte Programado" />
                <!-- Espaciador que empuja el botón Log Out al fondo -->
                <Region VBox.vgrow="ALWAYS" />

                <Button onAction="#onCerrarSesion" styleClass="primary-button" text="Log Out" />
            </children>
        </VBox>
    </left>

</BorderPane>
