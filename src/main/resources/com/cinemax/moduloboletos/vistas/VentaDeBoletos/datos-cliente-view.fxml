<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="550.0" prefWidth="800.0" styleClass="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemax.moduloboletos.Controladores.UI.VentaDeBoletos.ControllerDatosCliente">
    <top>
        <HBox fx:id="headerBar" alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
            <children>
                <Button onAction="#onBackAction" styleClass="icon-button" text="←" />
                <Label styleClass="section-title" text="Checkout" />
                <Region HBox.hgrow="ALWAYS" />
                <!-- NUEVO: Botón para cambiar el tema -->
                <Button onAction="#onThemeToggleAction" styleClass="icon-button, theme-button" text="🎨" />
                <Button onAction="#onCloseAction" styleClass="icon-button, close-button" text="✕" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>
            <Label styleClass="section-title" text="Personal Information" />
            <GridPane hgap="10.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                </columnConstraints>
                <Label text="Name" GridPane.rowIndex="0" />
                <TextField fx:id="nombreField" promptText="Name" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Last name" GridPane.rowIndex="1" />
                <TextField fx:id="apellidoField" promptText="Last name" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Document type" GridPane.rowIndex="2" />
                <ComboBox fx:id="tipoDocumentoBox" prefWidth="Infinity" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Document number" GridPane.rowIndex="3" />
                <TextField fx:id="documentoField" promptText="Document number" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Email address" GridPane.rowIndex="4" />
                <TextField fx:id="correoField" promptText="example@email.com" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </GridPane>
        </VBox>
    </center>

    <right>
        <VBox styleClass="financial-summary-pane" spacing="15.0" minWidth="280" maxWidth="280">
            <!-- ... contenido del panel financiero ... -->
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                </columnConstraints>
                <Label text="Subtotal:" GridPane.rowIndex="0" />
                <Label fx:id="subtotalLabel" alignment="CENTER_RIGHT" maxWidth="Infinity" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Impuestos (15%):" GridPane.rowIndex="1" />
                <Label fx:id="impuestosLabel" alignment="CENTER_RIGHT" maxWidth="Infinity" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Total del pedido:" style="-fx-font-weight: bold; -fx-font-size: 16px;" GridPane.rowIndex="2" />
                <Label fx:id="totalLabel" alignment="CENTER_RIGHT" maxWidth="Infinity" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>
            <Button onAction="#onVerDetalle" styleClass="link-button" text="See order detail" />
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="finalizarButton" onAction="#onFinalizarAction" maxWidth="Infinity" styleClass="primary-button" text="Pay" />
        </VBox>
    </right>
</BorderPane>
